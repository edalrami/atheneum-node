<script>
    //create refs to various firebase components
    var file_list = document.getElementById('file_list');
    var auth = firebase.auth();
    var database = firebase.database();
    //db_ref points to the file tab in the DB
    var db_ref = database.ref("files");
    var storage = firebase.storage();
    var storageRef = storage.ref();
    var upload_file;
    var metadata;
    var subject;


    //bind file select function to the upload button
    document.getElementById('file').addEventListener('change', handle_file_select, true);
    //document.getElementById('file').disabled = true;
    //Reads the uploaded file and assembles a reference and metadata for the file
    function handle_file_select(evt) {
        console.log("Handling uploaded file");
        evt.stopPropagation();
        evt.preventDefault();
        //set upload_file to the uploaded file
        upload_file = evt.target.files[0];
        //debug
        console.log(upload_file);

        metadata = {
            'contentType': upload_file.type
        };
    }

    //db_upload is called when the "Send it" button is pressed
    //Actually pushes the file to the database and cloud storage
    function db_upload() {
        console.log(upload_file);
        console.log("subject = "+subject);
        //Not sure why, but this crashes 100% of the time without this if statement...
        if(!upload_file) {};
      // Push to child path.
        storageRef.child('testUploads/' + upload_file.name).put(upload_file, metadata).then(function(snapshot) {
            console.log('Uploaded', snapshot.totalBytes, 'bytes.');
            console.log(snapshot.metadata);
            var url = snapshot.downloadURL;
            var new_entry_ref = db_ref.push();
            //Default DB entry
            new_entry_ref.set({
                'name': upload_file.name,
                'loc': url,
                'upvotes': 0,
                'owner': 'nikola',
                'category': subject,
                'desc': document.getElementById('file_description').value,
                'wallet': 1,
                'wallet_pass': 2
            });
            console.log('File available at', url);
            database.ref()
        }).catch(function(error) {
            console.error('Upload failed:', error);
           });
    }

    //Sets the subject based on the user input on the drop-down menu
    function set_subject(category) {
        if(category == 1) {
            subject = "History";
        }
        //subject = category;
        console.log("subject = " + subject);
    }
</script>

